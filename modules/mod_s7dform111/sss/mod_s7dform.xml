                    name="mensucess"
                    type="textarea"
                    cols="60"
                    filter="raw"
                    rows="6"
                    default="Obrigado por seu e-mail"
                    description="MOD_AWSUCCESS"
                    label="MOD_WKCONTACT_MENSUCESS_LABEL"
                />

                <field
                    name="menfailure"
                    type="textarea"
                    filter="raw"
                    cols="60"
                    rows="6"
                    default="Falha ao enviar e-mail!"
                    label="MOD_WKCONTACT_MENFAILURE_LABEL"
                />
                
