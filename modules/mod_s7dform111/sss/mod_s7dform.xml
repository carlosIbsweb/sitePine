                    label="MOD_WKCONTACT_DADOSITEM_LABEL"
                />
                <field
                    name="payReference"
                    type="text"
                    label="MOD_WKCONTACT_PAYREFERENCE_LABEL"
                    description="MOD_WKCONTACT_PAYREFERENCE_DESCRIPTION"
       
