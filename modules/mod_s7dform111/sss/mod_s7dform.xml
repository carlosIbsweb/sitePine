                    type="textarea"
                    cols="60"
                    filter="raw"
                    rows="6"
                    default="E-mail confirmado com sucesso!"
                    description="Variável de token: tokenEmail(varchar 255), Variável de Link: confirmEmail(int 11)"
                    label="Mensagem de confirmação"
