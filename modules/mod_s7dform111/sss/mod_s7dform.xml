                    name="notemail"
                    type="text"
                    label="E-mail"
                />

                 <field
                    name="notsubject"
                    type="text"
                    label="Assunto"
                />

                <field
                    name="notbody"
                    type="textarea"
                    label="Corpo e-mail"

