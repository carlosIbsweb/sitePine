	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>jcarloswk@gmail.com</authorEmail>
	<authorUrl>www.webkeys.com.br</authorUrl>
	<version>1.0</version>
	<description>Contato De Paula</description>
	<files>
		<filename module="mod_dcontact">mod_dcontact.php</filename>
		<folder>assets</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>		<filename>mod_dcontact.xml</filename>
	</files>
	
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_SYNDICATION_FEEDS" />
	<config>
		<fields name="params">
			<fieldset name="basic">
                  <field
                    name="mail"
                    type="text"
                    label="Email"
                    description="Um ou mais emails, separando por vírgula ex: (ex@ex.com,ex2@ex.com)" />

                    <field name="dbanco" type="radio" default="1" label="Cliente do Bradesco" description="" class="btn-group btn-group-yesno radio">
					<option value="1">Exibir</option>
  					<option value="0">Ocultar</option>
  					
				</field>
               
			</fieldset>

		</fields>
	</config>
</extension>
