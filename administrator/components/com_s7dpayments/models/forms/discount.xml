<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="uniq" type="radio" default="0" label="Ativar Limit" description="" class="btn-group btn-group-yesno radio">
          <option value="1">Ativar</option>
          <option value="0">Desativar</option>
          
      </field>
    <field name="limit" type="number" default="1" label="Limite" description="" min="1" max="1000000000" step="1" />

    <field name="grupo" type="radio" default="0" label="Ativar Grupo" description="" class="btn-group btn-group-yesno radio">
          <option value="1">Ativar</option>
          <option value="0">Desativar</option>
          
      </field>

    <field name="vip" type="radio" default="0" label="Vip" description="" class="btn-group btn-group-yesno radio">
          <option value="1">Ativar</option>
          <option value="0">Desativar</option>
          
      </field>

      <field name="limiteusuario" type="radio" default="0" label="Sem Limite por usuário" description="" class="btn-group btn-group-yesno radio">
          <option value="1">Ativar</option>
          <option value="0">Desativar</option>
          
      </field>
    <field name="grupo_qnt" type="number" default="1" label="Grupo Quantidade" description="" min="1" max="1000000000" step="1" />

    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" hidden="true" hint="COM_S7DPAYMENTS_FORM_LBL_DISCOUNT_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" description="JGLOBAL_FIELD_MODIFIED_BY_DESC" hidden="true" hint="COM_S7DPAYMENTS_FORM_LBL_DISCOUNT_MODIFIED_BY"/>
    <field name="codigo" filter="safehtml" type="text" required="true" message="Já existe um código com essa mesma descrição" label="COM_S7DPAYMENTS_FORM_LBL_DISCOUNT_CODIGO" description="COM_S7DPAYMENTS_FORM_DESC_DISCOUNT_CODIGO" hint="COM_S7DPAYMENTS_FORM_LBL_DISCOUNT_CODIGO"/>
    <field name="criado" type="timecreated" label="COM_S7DPAYMENTS_FORM_LBL_DISCOUNT_CRIADO" description="COM_S7DPAYMENTS_FORM_DESC_DISCOUNT_CRIADO" hint="COM_S7DPAYMENTS_FORM_LBL_DISCOUNT_CRIADO"/>
    <field name="valid" default="0000-00-00" type="calendar" class="inputbox" filter="safehtml" label="COM_S7DPAYMENTS_FORM_LBL_DISCOUNT_VALID" description="COM_S7DPAYMENTS_FORM_DESC_DISCOUNT_VALID" hint="COM_S7DPAYMENTS_FORM_LBL_DISCOUNT_VALID"/>
    <field name="discount" filter="safehtml" type="text" required="true" message="Precisa neh, como vai querer um desconto sem desconto kkkk" label="COM_S7DPAYMENTS_FORM_LBL_DISCOUNT_DISCOUNT" description="COM_S7DPAYMENTS_FORM_DESC_DISCOUNT_DISCOUNT" hint="COM_S7DPAYMENTS_FORM_LBL_DISCOUNT_DISCOUNT"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
